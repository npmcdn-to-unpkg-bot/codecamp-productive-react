{
  "globals":{
    "__DEV__": true
  },
  "rules": {
    "semi-spacing": [1, {"before": false, "after": true }],
    "comma-spacing": [1, {"before": false, "after": true}],
    "key-spacing": [1, {"beforeColon": false, "afterColon": true}],
    "no-extra-semi": 1,
    "no-dupe-keys": 2,
    "semi": [1, "never"],

    "no-unused-vars": [2, {"vars": "all", "args": "after-used", "varsIgnorePattern": "React"}],

    "indent": [
      1,
      2
    ],
    "no-undef": 2,
    "quotes": [
      1,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "react/jsx-no-duplicate-props": 2,
    "react/prop-types": 1,
    "react/jsx-uses-vars": 1
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "spread": true,
    "restParams": true,
    "arrowFunctions": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "objectLiteralDuplicateProperties": false,
  },
  "plugins": [
    "react"
  ]
}
